table.movy-table
  thead
    tr
      th= "Poster"
      th= "Title"
      th= "Genres"
      th= "Release Date"
      th= ""

  tbody
    tr.movy-table-row(movy-table-row
      movie="movie"
      ng-repeat="movie in ($ctrl.movies \
      | orderBy : $ctrl.filter.order.property : $ctrl.filter.order.reverse \
      | limitTo : $ctrl.pager.limit : (($ctrl.pager.current - 1) * $ctrl.pager.limit)) as filteredMovies"
    )
