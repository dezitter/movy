.movy-pager
  button.pure-button(
    type="button"
    ng-click="$ctrl.previousPage()"
    ng-disabled="$ctrl.state.current === 1"
  )= "Previous"

  span| &nbsp; {{ $ctrl.state.current | padFilter }} &nbsp;
  span= "/"
  span| &nbsp; {{ $ctrl.state.total   | padFilter }} &nbsp;

  button.pure-button(
    type="button"
    ng-click="$ctrl.nextPage()"
    ng-disabled="$ctrl.state.current === $ctrl.state.total"
  )= "Next"
