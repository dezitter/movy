.movy-grid-item
  .movy-poster
    img(ng-src="{{ $ctrl.movie.poster_url }}" title="{{ $ctrl.movie.title }}")
    button.pure-button.movy-remove(type="button" title="Remove" ng-click="$ctrl.onRemove()")
      img(src="/img/icon/ic_delete_white_18dp.png")

    .movy-controls
      button.pure-button.movy-check(
        type="button"
        title="Watched"
        ng-class="{ 'movy-active': ($ctrl.movie.watched === true) }"
        ng-click="$ctrl.onUpdate({ watched: !$ctrl.movie.watched })"
      )
        img(src="/img/icon/ic_check_circle_white_18dp.png")

      button.pure-button.movy-star(
        type="button"
        title="Starred"
        ng-class="{ 'movy-active': ($ctrl.movie.starred === true) }"
        ng-click="$ctrl.onUpdate({ starred: !$ctrl.movie.starred })"
      )
        img(src="img/icon/ic_star_rate_white_18dp.png")

  .movy-title(title="{{ $ctrl.movie.title }}")
    | {{ $ctrl.movie.title }}

  .movy-release-date(title="{{ $ctrl.movie.release_date }}")
    | ({{ $ctrl.movie.release_date }})
