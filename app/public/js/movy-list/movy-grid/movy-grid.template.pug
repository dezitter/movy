movy-grid-item(
  movie="movie"
  ng-repeat="movie in ($ctrl.movies \
  | orderBy : $ctrl.filter.order.property : $ctrl.filter.order.reverse \
  | limitTo : $ctrl.pager.limit : (($ctrl.pager.current - 1) * $ctrl.pager.limit)) as filteredMovies"
)

.alert-info(ng-show="!$ctrl.isFiltering() && $ctrl.allMovies.length === 0")
  = "Your list is empty."

.alert-info(ng-show="$ctrl.isFiltering() && filteredMovies.length === 0")
  = "Nothing found."
