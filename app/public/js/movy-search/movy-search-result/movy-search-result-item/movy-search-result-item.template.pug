.movy-search-result-item
  .movy-poster
    img(ng-src="{{ $ctrl.movie.small_poster_url }}" title="{{ $ctrl.movie.title }}")
    button.pure-button.movy-add(
      type="button"
      ng-click="$ctrl.onAdd()"
      ng-disabled="{{ $ctrl.isInStore() }}"
    )
      img(src="/img/icon/ic_add_circle_white_18dp.png")

  .movy-title(title="{{ $ctrl.movie.title }}")
    | {{ $ctrl.movie.title }}

  .movy-release-date(title="{{ $ctrl.movie.release_date }}")
    | ({{ $ctrl.movie.release_date }})

